    "-Wno-unused-variable",
    "-Wno-sign-compare",
    "-Wno-parentheses",
  ]
  include_dirs = [
    "//lib/libc/include",
  ]
  sources = [
    "k_sin.c",
    "s_sin.c",
    "s_sinf.c",
    "k_cos.c",
    "s_cos.c",
    "s_cosf.c",
    "k_tan.c",
    "s_tan.c",
    "s_tanf.c",
    "e_sqrt.c",
    "e_sqrtf.c",
    "k_rem_pio2.c",
    "s_floor.c",
    "s_floorf.c",
    "s_scalbn.c",
    "s_scalbnf.c",
    "s_copysign.c",
    "s_copysignf.c",
    "e_acos.c",
    "e_acosf.c",
    "e_asin.c",
    "e_asinf.c",
    "e_pow.c",
    "e_powf.c",
    "s_fabs.c",
    "s_fabsf.c",
    "e_fmod.c",
    "e_log.c",
    "e_exp.c",
    "s_round.c",
    "s_ceil.c",
    "s_ceilf.c",
    "s_trunc.c",
    "s_atan.c",
    "e_atan2.c",
  ]
